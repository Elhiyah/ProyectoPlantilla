@{
    ViewData["Title"] = "Home Page";
}

<main>
    <section id="inicio" class="hero">
        <div class="hero-text">
            <h1>¡Bienvenidos a Pollos Deliciosos!</h1>
            <p>El mejor pollo con el sabor que te encanta. Fresco, jugoso y preparado al momento.</p>
            <a href="#menu" class="btn">Ver Menú</a>
        </div>
    </section>

    <section id="menu" class="menu-section">
        <h2>Nuestro Menú</h2>
        <div class="menu-items">
            <div class="item">
                <img src="https://cdn0.recetasgratis.net/es/posts/2/3/7/pollo_al_jugo_32732_600.jpg" alt="Pollo a la Brasa">
                <h3>Pollo a la Brasa</h3>
                <p>Delicioso pollo marinado con especias peruanas.</p>
            </div>
            <div class="item">
                <img src="https://www.paulinacocina.net/wp-content/uploads/2021/11/Pollo-asado-con-verduras.jpg" alt="Pollo Broaster">
                <h3>Pollo Broaster</h3>
                <p>Pollo crujiente y jugoso al estilo broaster.</p>
            </div>
            <div class="item">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRdVUnLeOUuMLSVkJoYNsLD6MjEofQV2FhVzA&s" alt="Alitas BBQ">
                <h3>Alitas BBQ</h3>
                <p>Alitas bañadas en nuestra salsa BBQ especial.</p>
            </div>
        </div>
    </section>

    <section id="promociones" class="promos">
        <h2>Promociones del Día</h2>
        <p>¡No te pierdas nuestras ofertas especiales todos los días!</p>
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRkvZn0UckFPkvPSRhDs9rgl_3VspRL4BI0fg&s" alt="Promoción Especial">
    </section>
